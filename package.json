{
  "name": "tor-js",
  "version": "0.2.2",
  "description": "A TypeScript Tor client library for making anonymous HTTP requests through the Tor network via Snowflake bridges",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "curlTor": "./bin/curlTor"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./standard": {
      "types": "./dist/TorClient/versions/standard.d.ts",
      "import": "./dist/TorClient/versions/standard.mjs",
      "require": "./dist/TorClient/versions/standard.js"
    },
    "./noStaticCerts": {
      "types": "./dist/TorClient/versions/noStaticCerts.d.ts",
      "import": "./dist/TorClient/versions/noStaticCerts.mjs",
      "require": "./dist/TorClient/versions/noStaticCerts.js"
    },
    "./singleton": {
      "types": "./dist/TorClient/versions/singleton.d.ts",
      "import": "./dist/TorClient/versions/singleton.mjs",
      "require": "./dist/TorClient/versions/singleton.js"
    }
  },
  "files": [
    "bin",
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "tor",
    "proxy",
    "anonymous",
    "snowflake",
    "privacy",
    "onion",
    "client",
    "typescript"
  ],
  "author": "Andrew Morris",
  "contributors": [
    "hazae41"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/voltrevo/tor-js.git"
  },
  "scripts": {
    "build": "rm -rf dist && tsup && tsc --emitDeclarationOnly --declarationMap --outDir dist",
    "build:singleton": "rm -rf dist-singleton && npm run build && rollup -c rollup.singleton-bundle.mjs && rollup -c rollup.singleton-bundle-dts.mjs",
    "build:demo": "vite build",
    "dev": "vite",
    "dev:lib": "tsup --watch",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "test": "for file in $(find src -name '*.test.ts'); do echo \"Running: $file\"; tsx \"$file\" || exit 1; done",
    "test:browser": "bash scripts/test-browser.sh",
    "screenshot": "tsx browser-testing/screenshot.ts",
    "coverage": "c8 --reporter=text-summary --reporter=html npm run test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "measure-size": "node scripts/measure-size.mjs",
    "measure-detailed-size": "node scripts/measure-detailed-size.mjs",
    "commit-checks": "concurrently \"npm test\" \"npm run tsc\" \"npm run lint\" \"npm run format:check\" && echo && echo \"âœ… All checks passed! Remember to confirm with the user before committing.\"",
    "tsc": "tsc --noEmit",
    "generate:ccadb": "tsx scripts/generate-ccadb.ts"
  },
  "c8": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts",
      "src/**/*.integrationTest.ts",
      "src/**/example.ts",
      "node_modules"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "skipFull": false
  },
  "dependencies": {
    "@hazae41/plume": "3.0.5",
    "@hazae41/signals": "1.0.2",
    "@hazae41/smux": "1.1.3",
    "@hazae41/symbol-dispose-polyfill": "1.0.2",
    "@noble/curves": "^2.0.1",
    "events": "^3.3.0",
    "hash-wasm": "^4.12.0",
    "p-limit": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.38.0",
    "@hazae41/deimos": "^1.0.0",
    "@hazae41/phobos": "^1.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^22.0.0",
    "c8": "^10.1.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "playwright": "^1.57.0",
    "prettier": "^3.6.2",
    "rollup-plugin-dts": "^6.3.0",
    "tslib": "^2.8.1",
    "tsup": "^8.3.5",
    "tsx": "^4.21.0",
    "typed-emitter": "^2.1.0",
    "typescript": "5.7.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.10"
  }
}
